{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h2>liste de pages</h2>

    <table class="table table-striped table-hover">
        <thead>
            <tr>

                <th>Titre</th>

                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for page in pages %}
                <tr>

                    <td><a href="{{ path('adminPages_show', { 'id': page.id }) }}">{{ page.titre }}</a></td>

                    <td>
                        <a href="{{ path('adminPages_show', { 'id': page.id }) }}"><i class="icon-eye-open"></i></a>&nbsp;&nbsp;&nbsp;
                        <a href="{{ path('adminPages_edit', { 'id': page.id }) }}"><i class="icon-edit"></i></a>


                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('adminPages_new') }}">cr√©er une nouvelle page</a>
        </li>
    </ul>
    <div class="pagination">
        {{ knp_pagination_render(pages) }}
    </div>
{% endblock %}
