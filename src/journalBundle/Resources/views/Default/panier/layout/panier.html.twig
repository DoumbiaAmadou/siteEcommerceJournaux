{% extends "::layout/layout.html.twig" %}



{%block body %}
    {% set totalHT = 0.0 %}
    {% set totalTTC = 0.0 %}
    <div class="container">
        <div class="row">
            <div class="span3">
                {% include ':modules/navigation.html.twig' %}

            </div>
            <div class="span9">
                <h2>Votre parnier</h2>

                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Références</th>
                            <th>Quantité</th>
                            <th>Prix unitaire</th>
                            <th>Total HT</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for  produit in produits %}
                            <tr>

                        <form method="GET"  action="{{ path('ajouter',{'id':produit.id }) }}">
                            <td>{{produit.nom}}</td>
                            <td>

                                <select name="qte" class="span1" onChange="this.form.submit()">
                                    {% for i in 1..20 %}    
                                        <option value="{{i}}" 
                                                {% if i == panier[produit.id] %} 
                                                    selected="selected" 
                                                {% endif %}
                                                >{{i}}
                                        </option>
                                    {% endfor %}
                                </select>
                                <a href="{{ path('supprimer',{'id':produit.id }) }}"><i class="icon-trash"></i></a>
                            </td>
                            <td>{{ produit.prix |number_format(2, ',', ' ') }}{{ devise }}</td>
                            <td>{{ (produit.prix * panier[produit.id]) |number_format(2, ',', ' ') }}{#|tva(produit.tva.multiplication) #}   {{ devise }}</td>
                        {% set totalHT = totalHT+(produit.prix* panier[produit.id] )%}
                        {% set totalTTC = totalTTC + (produit.prix|tva(produit.tva.multiplication)) * panier[produit.id] %}

                        </form>
                        </tr>
                      
                    {% endfor %}   

                    </tbody>
                </table>


                <dl class="dl-horizontal pull-right">
                    <dt>Total HT :</dt>
                    <dd>{{totalHT|number_format(2, ',', ' ')}} {{devise}}</dd>

                    <dt>TVA :</dt>
                    <dd>{{ (totalTTC- totalHT)|number_format(2, ',', ' ') }} {{devise}}</dd>

                    <dt>Total:</dt>
                    <dd>{{totalTTC |number_format(2, ',', ' ') }}{{devise}}</dd>
                </dl>
                <div class="clearfix"></div>
                <a href="{{ path('livraison')}}" class="btn btn-success pull-right">Valider mon panier</a>
                <a href="index.php" class="btn btn-primary">Continuer mes achats</a>
            </div>

        </div>
    </div>
{% endblock %}  