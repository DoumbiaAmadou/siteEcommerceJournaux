{% extends '::layout/layoutAdmin.html.twig' %}



{% block body %}
    <h1>Liste de Produits</h1>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Disponible</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for produit in produits %}
                <tr>
                    <td><a href="{{ path('adminProduits_show', { 'id': produit.id }) }}">{{ produit.nom }}</a></td>
                    <td>{{ produit.description }}</td>
                    <td>{{ produit.prix }}</td>
                    <td>{% if produit.disponible %}Yes{% else %}No{% endif %}</td>
                    <td>
                        <a href="{{ path('adminProduits_show', { 'id': produit.id }) }}"><i class="icon-eye-open"></i></a>&nbsp;&nbsp;&nbsp;
                        <a href="{{ path('adminProduits_edit', { 'id': produit.id }) }}"><i class="icon-edit"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('adminProduits_new') }}">Create a new entry</a>
        </li>
    </ul>
    <div class="pagination">
        {{ knp_pagination_render(produits) }}
    </div>
{% endblock %}
