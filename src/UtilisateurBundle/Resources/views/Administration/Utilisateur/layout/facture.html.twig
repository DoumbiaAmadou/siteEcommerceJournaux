{% extends '::layout/layoutAdmin.html.twig' %}



{% block body %}
    <h1>Liste de factures </h1>
    <table class="table table-striped table-hover">
        <thead>
            <tr> 
                <th>Date</th>
                <th>Reference</th>
                <th>Utilisateur</th>
                <th>Montant</th>
                <th>Adresse de livraison </th>              
                   <th>voir Facture </th> 
            </tr>
        </thead>
        <tbody>
            {% for commande in utilisateur.commandes %}
               <tr>
                
                   <td> {{commande.date |date('d  M Y   H:i:s')}}</td>  
                   <td>{{commande.reference}} </td>
                   <td>
                       {{commande.utilisateur.username}}
                   </td>
                    <td> {{commande.commande.totalTTC|number_format(2, ',', ' ')}}{{devise}}</td>
                    <td>
                         {{commande.commande.livraison.adresse}} 
                         {{commande.commande.livraison.ville}}
                         {{commande.commande.livraison.cp}}
                         {{commande.commande.livraison.pays}}
                    </td>
                    <td>
                          <a href="{{ path('AdminFacture', { 'id': commande.id }) }}" target="_blank"><i title="voir les factures" class="icon-eye-open"></i></a>&nbsp;&nbsp;&nbsp;
               
                    </td>
                </tr>
             {% endfor %}
          
        </tbody>
    </table>

   
    <div class="pagination">
        {#{ knp_pagination_render(produits) }#}
    </div>
{% endblock %}
